<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<section class="hero is-primary is-fullheight-with-navbar">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        Welcome to Conor's WeatherTop Station App
      </h1>
      <h2 class="subtitle">
        Please sign up or log in to continue
      </h2>
      <div class="buttons is-centered">
        <a href="/signup" class="button is-link is-large">Sign Up</a>
        <a href="/login" class="button is-light is-large">Log In</a>
      </div>
      <div class="section">
        <div class="columns is-centered">
          <div class="column is-2">
            <span class="icon is-large">
              <i class="fas fa-sun fa-3x"></i>
            </span>
            <p>Sunny</p>
          </div>
          <div class="column is-2">
            <span class="icon is-large">
              <i class="fas fa-cloud fa-3x"></i>
            </span>
            <p>Cloudy</p>
          </div>
          <div class="column is-2">
            <span class="icon is-large">
              <i class="fas fa-cloud-rain fa-3x"></i>
            </span>
            <p>Rainy</p>
          </div>
          <div class="column is-2">
            <span class="icon is-large">
              <i class="fas fa-snowflake fa-3x"></i>
            </span>
            <p>Snowy</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
